#/bin/bash
name=$1
shift 1
dir="${HOME}/work/puppet/test_data/${name}c"
cp ~/namespaceauth.conf "${dir}/namespaceauth.conf"
cp ~/auth.conf "${dir}/auth.conf"
puppetd --listen true --debug --no-daemonize --confdir=${dir} --vardir=${dir} --server puppetmaster $@
#puppetd --test --listen --confdir=${dir} --vardir=${dir} --server puppetmaster $@
